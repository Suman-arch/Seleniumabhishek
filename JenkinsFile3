pipeline {
agent any
tools {
jdk 'Java 8'
maven 'Maven 3.6.3'
}
parameters {
        choice(name:'profileName', choices:['Google','Qaclick'],description:'click on the profile name')
    }
options {
timestamps()
}
stages{
stage('checkout') {
steps {
git credentialsId: 'Suman Git', url: 'https://github.com/Suman-arch/fourth.git'
}
}
stage('Clean') {
             steps  {
                bat "mvn clean "
                     }
                            }      
           stage('Compile') {
             steps  {
                bat "mvn compile "
                     }
                            }                 
          stage('Test') {
             steps  {              
                bat "mvn test -P${params.profileName} "
                    }
                          } 
stage('email') {
steps {
echo "sending mail"
}
post {
failure
{
mail to: 'abhishek260297@gmail.com',
subject: "Email Report for failure",
body: "failure",
                  mimeType:'text/html'
}
success
{
mail to: 'abhishek260297@gmail.com',
subject: "Email Report for success",
body: "success",
                  mimeType:'text/html'
}
}
}
}
}
