<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
<Properties>
<Property name="basePath">./logs</Property>
</Properties>
  <Appenders>
  <RollingFile name="File" fileName="${basePath}/apidemos.log" filePattern="${basePath}/prints-%d{yyyy-MM-dd}.log">
     <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
      <SizeBasedTriggeringPolicy size="80000" />
          </RollingFile>
          
          <RollingFile name="File2" fileName="${basePath}/general.log" filePattern="${basePath}/prints-%d{yyyy-MM-dd}.log">
     <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
      <SizeBasedTriggeringPolicy size="80000" />
          </RollingFile>
          
          <!--  <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
    </Console>-->
  </Appenders>
  <Loggers>
    <Logger name="tests.QAClickAcademyTest" level="trace" additivity="false">
      <AppenderRef ref="File"/>
    </Logger>
    <Logger name="tests.RediffPageTest" level="trace" additivity="false">
      <AppenderRef ref="File2"/>
    </Logger>
     <Root level="trace">
      <AppenderRef ref="File"/>
       <AppenderRef ref="File2"/>
    </Root>
  </Loggers>
</Configuration>